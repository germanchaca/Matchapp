<?xml version="1.0" encoding="utf-8"?>
<fiuba.cardstack.SwipeFrameLayout
    android:id="@+id/swipeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@drawable/ic_clear_24dp"
        android:paddingTop="6dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:drawableTop="@drawable/ic_done_black_24dp_primary"
        android:paddingTop="6dp"/>


    <fiuba.cardstack.SwipeDeck
        android:id="@+id/swipe_deck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/swipe_horizontal_margin"
        swipedeck:card_spacing="10dp"
        swipedeck:max_visible="3"
        swipedeck:opacity_end="0.2"
        swipedeck:render_above="false"
        swipedeck:rotation_degrees="15"/>

</fiuba.cardstack.SwipeFrameLayout>




