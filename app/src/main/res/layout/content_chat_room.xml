<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerChatRoom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".controller.activity.ChatRoomActivity"
    tools:showIn="@layout/activity_chat_room"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:scrollbars="vertical"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginStart="10dp"
        >


        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_message"
            android:textColorHint="@color/quantum_bluegrey500"
            android:fontFamily="sans-serif-medium"
            android:textSize="16dp"
            android:paddingLeft="16dp"
            android:layout_marginEnd="60dp"
            android:lines="3"
            android:background="@drawable/bg_inputtext_white"
            android:elevation="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"/>

    </FrameLayout>


</RelativeLayout>

